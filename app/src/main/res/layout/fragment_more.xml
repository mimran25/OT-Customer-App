<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".moreFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">
        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/avatar"
            tools:ignore="ContentDescription">
        </ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_7sdp">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Name"
                tools:ignore="HardcodedText">
            </TextView>
            <TextView
                android:id="@+id/viewProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Profile  >"
                android:textColor="@color/orange"
                tools:ignore="HardcodedText">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <!--    Personal-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal"
        android:padding="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_15sdp"
        tools:ignore="HardcodedText">
    </TextView>

    <LinearLayout
        android:id="@+id/myAds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_7sdp">
        <ImageView
            android:layout_width="@dimen/_20ssp"
            android:layout_height="match_parent"
            android:src="@drawable/ad_icon"
            tools:ignore="ContentDescription">
        </ImageView>
        <TextView
            android:id="@+id/ads"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:text="My Ads"
            tools:ignore="HardcodedText">
        </TextView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_chevron_right_24"
            tools:ignore="ContentDescription">
        </ImageView>
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerInsetStart="16dp"
        app:dividerInsetEnd="16dp"/>

    <LinearLayout
        android:id="@+id/favAds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_7sdp"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:layout_width="@dimen/_20ssp"
            android:layout_height="match_parent"
            android:src="@drawable/favourites2"
            tools:ignore="ContentDescription">
        </ImageView>
        <TextView
            android:id="@+id/fav"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:text="Favourite Ads"
            tools:ignore="HardcodedText">
        </TextView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_chevron_right_24"
            tools:ignore="ContentDescription">
        </ImageView>
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerInsetStart="16dp"
        app:dividerInsetEnd="16dp"/>

    <!--    Products-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Products"
        android:padding="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_15sdp"
        tools:ignore="HardcodedText">
    </TextView>

    <LinearLayout
        android:id="@+id/usedCars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_7sdp">
        <ImageView
            android:layout_width="@dimen/_20ssp"
            android:layout_height="match_parent"
            android:src="@drawable/old_car"
            tools:ignore="ContentDescription">
        </ImageView>
        <TextView
            android:layout_width="@dimen/_270sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:text="Used Cars"
            tools:ignore="HardcodedText">
        </TextView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_chevron_right_24"
            tools:ignore="ContentDescription">
        </ImageView>
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerInsetStart="16dp"
        app:dividerInsetEnd="16dp"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerInsetStart="16dp"
        app:dividerInsetEnd="16dp"/>

    <!--    Others-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Others"
        android:padding="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_15sdp"
        tools:ignore="HardcodedText">
    </TextView>

    <LinearLayout
        android:id="@+id/blog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_7sdp">
        <ImageView
            android:layout_width="@dimen/_20ssp"
            android:layout_height="match_parent"
            android:src="@drawable/contact_us"
            tools:ignore="ContentDescription">
        </ImageView>
        <TextView
            android:layout_width="@dimen/_270sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:text="Blog"
            tools:ignore="HardcodedText">
        </TextView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_chevron_right_24"
            tools:ignore="ContentDescription">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contactUS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_7sdp">
        <ImageView
            android:layout_width="@dimen/_20ssp"
            android:layout_height="match_parent"
            android:src="@drawable/contact_us"
            tools:ignore="ContentDescription">
        </ImageView>
        <TextView
            android:id="@+id/contact"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:text="Contact Us"
            tools:ignore="HardcodedText">
        </TextView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_chevron_right_24"
            tools:ignore="ContentDescription">
        </ImageView>
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerInsetStart="16dp"
        app:dividerInsetEnd="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_7sdp"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:layout_width="@dimen/_20ssp"
            android:layout_height="match_parent"
            android:src="@drawable/logout_icon"
            tools:ignore="ContentDescription">
        </ImageView>
        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="@color/red"
            tools:ignore="HardcodedText">
        </TextView>
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerInsetStart="16dp"
        app:dividerInsetEnd="16dp"/>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
    </RelativeLayout>

</LinearLayout>